{
  "name": "vkrun",
  "version": "0.4.0",
  "description": "Vkrun is a runtime data validation library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [],
  "author": "Mario Elvio",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://github.com/jukerah/vkrun#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jukerah/vkrun.git"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npm run clean && tsc",
    "prepublish": "npm run test && npm run build",
    "test": "jest --coverage=false",
    "test:coverage": "jest",
    "test:staged": "jest --passWithNoTests",
    "test:ci": "npm test -- --coverage=true",
    "prepare": "husky install && chmod ug+x .husky/*",
    "husky-add-hooks": "npx husky add .husky/pre-commit \"npm run pre-commit\" && npx husky add .husky/commit-msg \"npx commitlint --edit \"'$1'\"\" && npx husky add .husky/pre-push \"npm run test:ci\" ",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext *.ts --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
